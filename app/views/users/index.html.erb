	    <label for="name" class="col-lg-2 control-label">Email Addresses (comma separated): </label>
	    <div class="col-lg-10">
		  <%= text_area_tag 'new_emails', nil, :size => "50x10" %>
	    </div>	
	  </div>
      <br />
      <%= submit_tag "Create", :class => "btn btn-primary" %>
    </p>
    <% end %>
  <% end %>
  </div>
</div>
<% end %>

