<div class="col-lg-12">
  <h2><%= @author.full_name %></h2>
  <div class="row">
    <div class="well">
	  First Name: <%= @author.first_name %><br />
	  Last Name: <%= @author.last_name %><br />
	  Email: <%= @author.email %><br />
	  Phone: <%= @author.phone %><br />
	  Address 1: <%= @author.address_1 %><br />
	  Address 2: <%= @author.address_2 %><br />
	  City: <%= @author.city %><br />
	  State: <%= @author.state %><br />
	  Postal Code: <%= @author.postal_code %><br />
	  Country: <%= @author.country %><br />
	  <% unless @author.publisher.nil? %>
	    Publisher: <%= @author.publisher.name %><br />
	  <% end %>	
	  User: <%= @author.user.username %>
    </div>
  </div>	
</div>