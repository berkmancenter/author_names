<%= semantic_form_for @publisher, :html => { :class => "form-horizontal"} do |f| %>
  <fieldset>
    <legend>Profile</legend>	    
		<%= f.inputs do %>
	      <div class="form-group"> 
	        <label for="name" class="col-lg-2 control-label">Name</label>
	        <div class="col-lg-10">
	          <%= f.input :name, :label => false, :input_html => { :class => "form-control"} %>
	        </div>	
	      </div>
	      <div class="form-group"> 
	        <label for="description" class="col-lg-2 control-label">Description</label>
	        <div class="col-lg-10">
	          <%= f.input :description, :label => false, :input_html => { :class => "form-control"} %>
	        </div>	
	      </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Contact Name</label>
		    <div class="col-lg-10">
		      <%= f.input :contact_name, :label => false, :input_html => { :size => 30, :class => "form-control" } %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Email</label>
		    <div class="col-lg-10">
		      <%= f.input :email, :label => false, :input_html => { :size => 30, :class => "form-control" } %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Phone</label>
		    <div class="col-lg-10">
		      <%= f.input :phone, :label => false, :input_html => { :size => 30, :class => "form-control" } %> 
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Address 1</label>
		    <div class="col-lg-10">
		      <%= f.input :address_1, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Address 2</label>
		    <div class="col-lg-10">
		      <%= f.input :address_2, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">City</label>
		    <div class="col-lg-10">
		      <%= f.input :city, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">State</label>
		    <div class="col-lg-10">
		      <%= f.input :state, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Postal Code</label>
		    <div class="col-lg-10">
		      <%= f.input :postal_code, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Country</label>
		    <div class="col-lg-10">
		      <%= f.input :country, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Website</label>
		    <div class="col-lg-10">
		      <%= f.input :website, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  
		  <% unless @publisher.logo.blank? %>
		    <div class="form-group"> 
		      <label for="name" class="col-lg-2 control-label">Current Logo</label>
		      <div class="col-lg-10">	
			    <%= image_tag @publisher.logo_url.to_s, size: "200x200", alt: "Publisher Logo" %><br /><br />
			    <%= link_to "Current Logo Full Size", @publisher.logo_url %><br /><br />
				<%= f.input :remove_logo, :as => :boolean, :label => " Delete Current Logo? " %>
		      </div>	
		    </div>
		  <% end %>

		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Upload Logo:<br /><% unless @publisher.logo.blank? %>Current logo will be replaced.<% end %></label>
		    <div class="col-lg-10">
		      <%= f.input :logo, :as => :file, :label => false, :input_html => { :class => "form-control"}, :hint => "Logo will be resized to fit within a 200x200 pixel space. For best results, please upload an image of those dimensions or larger." %>
		    </div>	
		  </div>
		  
		<% end %>
		<%= f.actions do %>
		  <%= f.action :submit, :as => :button, :button_html => { :class => "btn btn-primary"} %>
		<% end %>
  </fieldset>
<% end %>