<%= semantic_form_for(@user) do |f| %>
  <%= f.inputs do %>
	<% if current_user.try(:superadmin?) || current_user.try(:admin?) %>
	  <%= f.input :first_name, :input_html => { :size => 30 } %>
	  <%= f.input :last_name, :input_html => { :size => 30 } %>
	  <%= f.input :username, :input_html => { :size => 30 } %>
	  <%= f.input :email, :input_html => { :size => 30 } %>
	<% end %>
	<%= f.input :library, :as => :radio, :label => "Assign Library: " %>
	<%= f.input :publisher, :as => :radio, :label => "Assign Publisher: " %>
	<br />
	<% if current_user.try(:superadmin?) || current_user.try(:admin?) %>
	  <span id='admin_box'>
		  Internal User Type:<br />
		  <% if current_user.try(:superadmin?) %>
		    <%= f.input :superadmin, :label => "  Is Superadmin? " %>
		  <% end %>	
		  <%= f.input :admin, :label => " Is Admin? " %> 
		  <%= f.input :staff, :label => " Is Staff? " %>
	  </span>
	<% end %>
  <% end %>
  <%= f.actions %>
<% end %>
