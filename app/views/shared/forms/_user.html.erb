<%= semantic_form_for(@user) do |f| %>
  <%= f.inputs do %>
	<% if current_user.try(:superadmin?) || current_user.try(:admin?) %>
	  <%= f.input :first_name, :input_html => { :size => 30 } %>
	  <%= f.input :last_name, :input_html => { :size => 30 } %>
	  <%= f.input :username, :input_html => { :size => 30 } %>
	  <%= f.input :email, :input_html => { :size => 30 } %>
	<% end %>
	<% if current_user.try(:superadmin?) %>
      <%= f.input :library, :as => :select, :label => "Assign Library: " %>
      <%= f.input :publisher, :as => :select, :label => "Assign Publisher: " %><br />
	<% elsif current_user.is_lib_admin? %>  
	  <p><%= check_box_tag :assign_library, "", checked = @user.library == current_user.library ? true : false %> Assign to <%= current_user.library.name %></p>
	<% elsif current_user.is_pub_admin? %>
	  <p><%= check_box_tag :assign_publisher, "", checked = @user.publisher == current_user.publisher ? true : false %> Assign to <%= current_user.publisher.name %></p>
	<% end %>  
	<br />
	<% if current_user.try(:superadmin?) || current_user.try(:admin?) %>
	  <span id='admin_box'>
		  Internal User Type:<br />
		  <% if current_user.try(:superadmin?) %>
		    <%= f.input :superadmin, :label => "  Is Superadmin? " %>
		  <% end %>	
		  <%= f.input :admin, :label => " Is Admin? " %> 
		  <%= f.input :staff, :label => " Is Staff? " %>
	  </span>
	<% end %>
  <% end %>
  <%= f.actions %>
<% end %>
