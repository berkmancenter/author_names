<%= semantic_form_for @questionnaire, :html => { :class => "form-horizontal"} do |f| %>
  <fieldset>
    <legend></legend>	    
		<%= f.inputs do %>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Name</label>
		    <div class="col-lg-10">
		      <%= f.input :name, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Description</label>
		    <div class="col-lg-10">
		      <%= f.input :description, :label => false, :input_html => { :class => "form-control", :size => "10x10"} %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Version</label>
		    <div class="col-lg-10">
		      <%= f.input :version, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
	  	  <% unless current_user.try(:superadmin?) %>
	      <div class="form-group"> 
	        <label for="name" class="col-lg-2 control-label">Publisher</label>
	        <div class="col-lg-10">
	          <%= f.input :publisher, :as => :string, :label => false, :input_html => { :value => current_user.publisher, :readonly => true, :class => "form-control" } %>
	        </div>	
	      </div>	  
	  	  <% else %> 
	      <div class="form-group"> 
	        <label for="name" class="col-lg-2 control-label">Publisher</label>
	        <div class="col-lg-10">
	          <%= f.input :publisher %>
	        </div>	
	      </div> 
	  	  <% end %>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Optional Global Form Items</label>
		    <div class="col-lg-10">
		      <%= f.input :form_items, :as => :check_boxes, :label => false, :collection => FormItem.all(:conditions => {:publisher_id => nil, :required => false}) %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Optional Our Form Items</label>
		    <div class="col-lg-10">
		      <%= f.input :form_items, :as => :check_boxes, :label => false, :collection => FormItem.all(:conditions => {:publisher_id => current_user.publisher.id, :required => false}) %>
		    </div>	
		  </div>
		<% end %>
		<%= f.actions do %>
		  <%= f.action :submit, :as => :button, :button_html => { :class => "btn btn-primary"} %>
		<% end %>
  </fieldset>
<% end %>