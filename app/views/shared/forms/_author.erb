<%= semantic_form_for(@author) do |f| %>
  <%= f.inputs do %>
    <%= f.input :first_name, :input_html => { :size => 30 } %>
    <%= f.input :last_name, :input_html => { :size => 30 } %>
    <%= f.input :email, :input_html => { :size => 30 } %> 
	<%= f.input :phone, :input_html => { :size => 30 } %> 
    <%= f.input :address_1 %>
    <%= f.input :address_2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :postal_code %>
    <%= f.input :country %>
	
	<% if current_user.try(:superadmin?) || current_user.try(:admin?) %>
      <%= f.input :publisher %>
      <%= f.input :user %>
	<% end %>
  <% end %>
  <%= f.actions %>
<% end %>