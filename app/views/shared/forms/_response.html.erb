<%= semantic_form_for @response, :html => { :class => "form-horizontal"} do |f| %>
  <fieldset>
    <legend>Response</legend>	    
		<%= f.inputs do %>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Questionnaire ID</label>
		    <div class="col-lg-10">
		      <%= f.input :questionnaire_id, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">User ID</label>
		    <div class="col-lg-10">
		      <%= f.input :user_id, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Form Item ID</label>
		    <div class="col-lg-10">
		      <%= f.input :form_item_id, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <% if @response.form_item.formtastic_field_map == "file" %>
		    <div class="form-group"> 
		      <label for="name" class="col-lg-2 control-label">Upload File</label>
		      <div class="col-lg-10">
		        <%= f.input :author_upload, :as => :file, :label => false, :input_html => { :class => "form-control"} %>
		      </div>	
		    </div>
		  <% else %>
		    <div class="form-group"> 
		      <label for="name" class="col-lg-2 control-label">Response Text</label>
		      <div class="col-lg-10">
		        <%= f.input :response_text, :label => false, :input_html => { :class => "form-control"} %>
		      </div>	
		    </div>
		  <% end %>
		<% end %>
		<%= f.actions do %>
		  <%= f.action :submit, :as => :button, :button_html => { :class => "btn btn-primary"} %>
		<% end %>
  </fieldset>
<% end %>