<h1>Libraries</h1>

<div>
  	<table id="libraries-table" class="table table-condensed tablesorter">
	<thead>
	  <tr>
		<th>Name</th>
		<th>Actions</th>
	  </tr>
	</thead> 
	<tbody>
	    <% @libraries.each do |library| %>
	    	<tr>
	  	  <td><%= library.name %></td>
		  <td>
	      <% if current_user.try(:superadmin?) %>
	   		<%= link_to('Edit', edit_library_path(library), :class => "action-edit") %> | <%= link_to('Delete', library_path(library), :confirm => "Are you sure?", :method => :delete) %>
	  	  <% end %>
		  </td>
	    </tr>
	    <% end %>
	</tbody>	
	</table>
  
  <% if current_user.try(:superadmin?) %>
    <%= link_to("Add New Library", new_library_path ) %>
  <% end %>
</div>
<%= will_paginate @libraries %>
