<% if @form_item.field_type == "Label" %>
  <%= raw @form_item.display_text %><br />
<% else %>

  <%= semantic_form_for :test, :html => { :method => :get, :class => "form-horizontal" } do |f| %>
    <fieldset>
      <legend></legend>	    
  		<%= f.inputs do %>
  		  <div class="form-group"> 
  		    <label for="name" class="col-lg-2 control-label"><%= @form_item.display_text %></label>
  		    <div class="col-lg-10">
		      <%= f.input @form_item.field_name, :as => @form_item.formtastic_field_map, :label => false, :collection => @form_item.field_options.nil? ? '' : @form_item.field_options.split(','), :input_html => { :class => "form-control"} %>
  		    </div>	
  		  </div>
  		<% end %>
  		<%= f.actions do %>
  		  <%= f.action :submit, :as => :button, :button_html => { :class => "btn btn-primary"} %>
  		<% end %>
    </fieldset>
  <% end %>
<% end %>  

