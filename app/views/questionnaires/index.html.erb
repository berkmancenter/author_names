<h1>Questionnaires</h1>

<div>
  	<table id="questionnaires-table" class="table table-condensed tablesorter">
	<thead>
	  <tr>
		<th>Name</th>
		<th>Actions</th>
		<th>Send</th>
	  </tr>
	</thead> 
	<tbody>
	    <% @questionnaires.each do |questionnaire| %>
	    	<tr>
	  	  <td><%= questionnaire.name %></td>
		  <td>
	      <% if current_user.try(:superadmin?) || current_user.is_pub_admin? %>
	   		<%= link_to('Edit', edit_questionnaire_path(questionnaire), :class => "action-edit") %> | <%= link_to('Delete', questionnaire_path(questionnaire), :confirm => "Are you sure you want to delete this questionnaire? This action cannot be undone.", :method => :delete) %> | 
	  	  <% end %>
		    <%= link_to('View', questionnaire_path(questionnaire), :class => "action-edit") %>
		  </td>
		  <td><%= link_to('Send Via Email', choose_authors_questionnaires_path(:questionnaire_id => questionnaire), :class => "action-edit") %></td>
	    </tr>
	    <% end %>
	</tbody>	
	</table>
  
  <% if current_user.try(:superadmin?) || current_user.is_pub_admin? %>
    <%= link_to("Add New Questionnaire", new_questionnaire_path ) %>
  <% end %>
</div>
