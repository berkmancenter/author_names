<h2>Send Questionnaire</h2>

<%= form_tag send_questionnaire_questionnaires_path, :method => :get do %>
<p>
  <%= hidden_field_tag :publisher_id, @publisher.id %>
  <%= hidden_field_tag :questionnaire_id, @questionnaire.id %>	
  <% @authors.each do |author| %>
    <%= check_box_tag("emails[]", author.user.email, false, :class => 'check') %> <%= author.user.email %><br />
  <% end %>
  <br />
  <%= submit_tag "Send" %>
</p>
<% end %>
